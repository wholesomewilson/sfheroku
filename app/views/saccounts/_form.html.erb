<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-md-4 text-center form_wrapper saccount_card_colour">
  <h4 class="accounts_header">Edit Account</h4>
  <div class="saccount_card_colour">
    <%= form_for @saccount do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <label>Phone Number</label>
        <%= f.text_field :phone, class:"form-control" %>
      </div>
    <%= f.submit 'Submit', class:"btn btn-light"  %>
    <% end %>
  </div>
</div>
