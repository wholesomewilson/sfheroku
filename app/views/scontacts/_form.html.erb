<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-md-4 text-center form_wrapper scontact_card_colour">
  <h4 class="contacts_header">Edit Contact</h4>
  <div class="scontact_card_colour">
    <%= form_for @scontact do |f| %>
        <div class="form-group">
          <label>First Name</label>
          <%= f.text_field :firstname, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <%= f.text_field :lastname, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <%= f.text_field :phone, class:"form-control" %>
        </div>
      <%= f.submit 'Submit', class:"btn btn-light"  %>

    <% end %>
  </div>
</div>
